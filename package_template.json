{
  "general": {
    "package": {
      "name": "Test1",
      "type": "BROWSER"
    },
    "browser": {
      "version": 1,
      "size": "1600x1600",
      "headless": false
    },
    "export": {
      "encoding": "UTF8",
      "format": "EXCEL"
    }
  },
  "input_data": {
    "type": "list",
    "value": [
      "https://www.cetrogar.com.ar/electrodomesticos/climatizacion/calefaccion.html",
      "https://www.cetrogar.com.ar/electrodomesticos/heladeras-y-freezers/heladeras.html",
      "https://www.cetrogar.com.ar/tecnologia/celulares-accesorios/smartphones.html"
    ]
  },
  "items": [
    {
      "type": "grabber_list",
      "locator": {
        "type": "XPATH",
        "value": "//OL[contains(@class,'products items')]/LI"
      },
      "name": "GrList",
      "items": [
        {
          "type": "grabber",
          "name": "id",
          "locator": {
            "type": "XPATH",
            "value": ".//DIV[@data-product-id]",
            "attribute": "data-product-id"
          }
        },
        {
          "type": "grabber",
          "name": "name",
          "locator": {
            "type": "XPATH",
            "value": ".//DIV[@class=\"product name product-item-name\"]"
          }
        },
        {
          "type": "grabber",
          "name": "price_no_offer",
          "locator": {
            "type": "XPATH",
            "value": ".//span[@class='old-price']//span[@class='price']"
          },
          "transformation": {
            "type": "regex",
            "value": [
              {
                "selection": "([\\d\\.,]+)",
                "handling": {
                  "type": "return",
                  "value": "$1"
                }
              }
            ]
          }
        },
        {
          "type": "grabber",
          "name": "price",
          "locator": {
            "type": "XPATH",
            "value": ".//div[@class='price-box price-final_price'][not(.//span[@class='special-price-discount'])]/span[2]//span[@class='price']"
          },
          "transformation": {
            "type": "regex",
            "value": [
              {
                "selection": "([\\d\\.,]+)",
                "handling": {
                  "type": "return",
                  "value": "$1"
                }
              }
            ]
          }
        },
        {
          "type": "grabber",
          "name": "price_offer",
          "locator": {
            "type": "XPATH",
            "value": ".//div[@class='price-section']//span[@class='special-price']//span[@class='price']"
          },
          "transformation": {
            "type": "regex",
            "value": [
              {
                "selection": "([\\d\\.,]+)",
                "handling": {
                  "type": "return",
                  "value": "$1"
                }
              }
            ]
          }
        },
        {
          "type": "grabber_internal",
          "name": "Loaded URL",
          "locator": {
            "type": "loaded_url"
          }
        },
        {
          "type": "grabber_internal",
          "name": "Starting URL",
          "locator": {
            "type": "starting_url"
          }
        },
        {
          "type": "grabber_internal",
          "name": "Scraped Time",
          "locator": {
            "type": "datetime"
          },
          "format": "%d/%m/%Y %H:%M:%S:%f"
        }
      ]
    },
    {
      "name": "Pagination",
      "type": "pagination",
      "locator": {
        "type": "XPATH",
        "value": "//div[@class='column main']/div[last()]//li[@class='item pages-item-next']/a"
      },
      "repeat_grabber_list": "GrList",
      "action": "click"
    }
  ]
}